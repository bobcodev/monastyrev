            a(class='header-favorites', href='#')
                svg(class='header-favorites__img')
                    path(d='M8.187 7.245L11.415.636c.414-.848 1.612-.848 2.026 0l3.228 6.609 7.219 1.066c.926.137 1.295 1.287.625 1.948L19.291 15.4l1.233 7.263c.158.933-.811 1.644-1.639 1.203l-6.456-3.431-6.456 3.431c-.829.44-1.798-.271-1.639-1.203L5.566 15.4.343 10.259c-.671-.66-.301-1.811.625-1.948l7.219-1.066z', fill='#fc0')
