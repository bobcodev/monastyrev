            //- Basket button
            a(class='basket header__basket', href='#')
                img(src='assets/icons/shopcart.svg', alt='Корзина')

            //- Supplementary information
            .header__suppinfo

                .header__cities-selector
                    .header__cities-selector-text Владивосток
                    img(src='assets/icons/arrow.svg', alt='Открыть меню выбора города')

                    include modal-city.pug
                
                ul.header-submenu
