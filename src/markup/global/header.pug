.header-wrap
    .container
        .header

            //- Menu button
            .header-btn-catalog
                button.btn-catalog(type='#')
                    svg(class='btn-catalog__img')
                        path(class='btn-catalog__img-icon', d='M12 11.163h4v4h-4v-4zm-6 0h4v4H6v-4zm-6 0h4v4H0v-4zm12-5.581h4v4h-4v-4zm-6 0h4v4H6v-4zm-6 0h4v4H0v-4zM12 0h4v4h-4V0zM6 0h4v4H6V0zM0 0h4v4H0V0z', fill='#ffffff')
                    .btn-catalog__text Каталог товаров
            button.header-btn-catalog__mobile(type='#')
                img(src='assets/icons/menu.svg', alt='Меню')

            //- Search form
            form.search-form.header__search-form
                input.search-form__input(type='search', placeholder='Средство, действующее вещество, проблема', aria-label='Поиск по сайту', autocomplete='off')
                button.btn__img.btn__img_yellow(type='submit')
                    img(src='assets/icons/search.svg', alt='Поиск лекарств')
            button.header__search-form-mobile(type='#')
                img(src='assets/icons/search.svg', alt='Поиск лекарств')

            //- Logo
            a(class='logo header__logo', href='#')
                img(src='assets/icons/logo.svg', alt='Монастырёв — аптечная сеть')

            //- Profile
            a(class='header-profile', href='#')
                svg(width='22', height='25', fill-rule='evenodd')
                    rect(class='header-profile_img-undershirt', fill='#fff', x='1', y='16.333', width='19.7', height='8', rx='4')
